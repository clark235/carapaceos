{
  "name": "carapaceos-runner",
  "version": "0.2.1",
  "description": "Programmatic API for booting and running tasks in isolated CarapaceOS VMs. Lightweight Alpine Linux substrate for AI agents.",
  "type": "module",
  "main": "index.js",
  "bin": {
    "carapace-run": "./lib/cli.js",
    "carapace-doctor": "./lib/doctor.js",
    "carapace-fetch": "./lib/image-fetch.js"
  },
  "exports": {
    ".": "./index.js",
    "./runner": "./lib/agent-runner.js",
    "./warm-pool": "./lib/warm-pool.js",
    "./seed-iso": "./lib/seed-iso.js",
    "./doctor": "./lib/doctor.js",
    "./control-server": "./lib/control-server.js",
    "./image-fetch": "./lib/image-fetch.js"
  },
  "files": [
    "index.js",
    "lib/",
    "vm-image/build-image.sh",
    "vm-image/create-seed-iso.js",
    "vm-image/user-data.template",
    "README.md",
    "SAFETY.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "node lib/test-runner.js",
    "test:unit": "node lib/test-seed-iso.js",
    "test:pool": "node lib/test-warm-pool.js",
    "test:control": "node lib/test-control-server.js",
    "test:all": "node lib/test-seed-iso.js && node lib/test-warm-pool.js && node lib/test-control-server.js",
    "doctor": "node lib/doctor.js",
    "build-image": "bash vm-image/build-image.sh",
    "fetch-image": "node lib/image-fetch.js",
    "fetch-image:check": "node lib/image-fetch.js --check",
    "serve": "node lib/control-server.js",
    "release": "node scripts/release.js",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "prepublishOnly": "node -e \"import('./index.js').then(m => console.log('export check OK:', Object.keys(m)))\""
  },
  "keywords": [
    "carapaceos",
    "qemu",
    "vm",
    "virtual-machine",
    "ai-agent",
    "sandbox",
    "isolation",
    "alpine-linux",
    "agent-substrate",
    "openClaw"
  ],
  "author": "Clark (https://github.com/clark235)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clark235/carapaceos.git"
  },
  "homepage": "https://github.com/clark235/carapaceos#readme",
  "bugs": {
    "url": "https://github.com/clark235/carapaceos/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "linux",
    "darwin"
  ]
}
